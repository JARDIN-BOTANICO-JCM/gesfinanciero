/**
 * Ejecuta la firma de un PDF desde la interfaz.
 *
 * - Cierra modales y muestra un modal de carga.
 * - Obtiene los datos del elemento disparador y la información del usuario, y envía una petición AJAX para firmar.
 * - Actualiza la interfaz (clases de botones, inserta indicador de firma) si la firma es exitosa.
 * - Muestra mensajes de error/modales en caso de fallo.
 *
 * @param {HTMLElement|jQuery} o Elemento que dispara la acción (se leen sus atributos data-).
 */
const firmarPdf = function( o ){
	const _o = jQuery( o );
	const dt = _o.data();
	
	const target = jQuery( dt['target'] );

	closeAllModal();
	
	const opc = { 'id' : 'ajaxldr' };
    const objmdl = mngModal.dibujar( opc );
    jQuery( objmdl ).modal('show');
    
    home.navUser(function( uDt ){
    	const form_data = new FormData();
        form_data.append('ajax', '<?php echo md5( IndexCtrl::API_FirmasproHelperAdd ); ?>');
        form_data.append('data', ut.b64EncodeUnicode( JSON.stringify( dt ) ) );
        form_data.append('u', uDt );

		__TransportarData(
			form_data,
			function( o ) {
				const result = o['result'];
				
				if ( Object.hasOwnProperty.call( result, 'bs' ) ) {
					const flok = result['bs'];
					if( flok !== "" ){
					
						target.removeClass('btn-outline-primary').addClass('btn-outline-success');
    					_o.before( btnOkFirma( 'btn-success' ) );
    					_o.remove();
					
					}
					else{
						alert('No se firm\xF3 el documento, probablemete no hay firmante en la plantilla del documento');
					}
				}
				
				docOkFirmados();
			
				setTimeout(function(){ jQuery( objmdl ).modal('hide'); }, <?php echo IndexCtrl::TIEMPO_AJAX_LDN ?>);
			},
			function ( err ) {
                const objmdlErr = mngModal.dibujar( { 'id' : 'mdlError', 'title' : 'Error','btnCerrarX' : true, 'level' : 'err' } );
                const alerta = jQuery(objmdlErr + ' div.alert');
                alerta.attr('class','alert alert-danger');
                
                let htmltxt = err.responseText;
                try {
					const res = JSON.parse( err.responseText );
					htmltxt = res['msj'];
				} catch (e) {
					// nada
				}
                alerta.html( htmltxt );

                jQuery( objmdlErr ).modal('show');
				setTimeout(function(){ jQuery( objmdl ).modal('hide'); }, <?php echo IndexCtrl::TIEMPO_AJAX_LDN ?>);
			}
		);
    });
};

